{
  "name": "emotilink-os",
  "version": "1.0.0",
  "description": "EmotiLink OS - Oracle-based blockchain platform for emotional data processing",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --config jest.config.frontend.js",
    "test:watch": "jest --watch --config jest.config.frontend.js",
    "test:coverage": "jest --coverage --config jest.config.frontend.js",
    "test:contracts": "hardhat test",
    "test:contracts:coverage": "hardhat coverage",
    "test:all": "npm run test && npm run test:contracts",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:amoy": "hardhat run scripts/deploy.js --network polygon-amoy",
    "deploy:goerli": "hardhat run scripts/deploy.js --network ethereum-goerli",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network ethereum-sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network polygon-mainnet",
    "verify": "hardhat verify",
    "verify:amoy": "hardhat verify --network polygon-amoy",
    "verify:goerli": "hardhat verify --network ethereum-goerli",
    "verify:sepolia": "hardhat verify --network ethereum-sepolia",
    "coverage": "hardhat coverage",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "security": "npm audit --audit-level moderate",
    "ci": "npm run lint && npm run type-check && npm run test:contracts && npm run build",
    "precommit": "npm run lint:fix && npm run type-check",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "fork": "hardhat node --fork https://polygon-mainnet.g.alchemy.com/v2/Gc18loKVH6D9R4tmbyK5P",
    "fork:goerli": "hardhat node --fork https://eth-goerli.g.alchemy.com/v2/Gc18loKVH6D9R4tmbyK5P",
    "fork:sepolia": "hardhat node --fork https://eth-sepolia.g.alchemy.com/v2/Gc18loKVH6D9R4tmbyK5P"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "alchemy-sdk": "^3.0.0",
    "autoprefixer": "^10.4.0",
    "dotenv": "^16.3.0",
    "ethers": "^6.8.0",
    "hardhat": "^2.19.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "solidity-coverage": "^0.8.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
